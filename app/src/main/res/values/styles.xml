<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditorTitles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:layout_marginTop">@dimen/margin_regular_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:textColor">@color/color_3</item>
    </style>

    <style name="EditorCheckboxLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/container_medium</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditorCheckbox">
        <item name="android:layout_height">@dimen/container_medium</item>
        <item name="android:layout_width">@dimen/container_medium</item>
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:button">@null</item>
        <item name="android:background">?android:attr/listChoiceIndicatorMultiple</item>
    </style>

    <style name="EditorCheckboxText">
        <item name="android:layout_height">@dimen/container_medium</item>
        <item name="android:layout_width">@dimen/container_medium</item>
        <item name="android:textSize">@dimen/text_xsmall</item>
    </style>

</resources>
